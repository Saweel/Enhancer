<section class="section form-center">
  <div class="columns is-centered">
    <div class="column is-one-quarter card">
      <div class="card-content">
        <h2 class="title has-text-centered">Edit <%= resource_name.to_s.humanize %></h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <p class="control">
            <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "input", placeholder: :full_name %>
            </p>
          </div>
          <div class="field">
            <p class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: :email %>
            </p>
          </div>
          <div class="field">
            <p class="control">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "input", placeholder: :current_password %>
            </p>
          </div>
          <div class="field">
            <p class="control">
            <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: "New #{:password}" %>
            </p>
          </div>
          <div class="field">
            <p class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Confirm New #{:password}" %>
            </p>
          </div>
          <div class="field actions">
            <p class="control">
            <%= f.submit "Update", class: "button is-success is-fullwidth" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>