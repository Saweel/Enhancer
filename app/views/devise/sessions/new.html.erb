<section class="section">
  <h2 class="title has-text-centered">Log In</h2>
  <div class="columns is-centered">
    <div class="column is-one-quarter">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <p class="control">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: :email %>
        </p>
      </div>
      <div class="field">
        <p class="control">
        <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: :password %>
        </p>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="field actions">
        <p class="control">
        <%= f.submit "Log In", class: "button is-success" %>
        </p>
      </div>
    <% end %>
    </div>
  </div>
</section>