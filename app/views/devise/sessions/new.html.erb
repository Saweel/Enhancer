<section class="section form-center">
  <div class="columns is-centered">
    <div class="column is-one-quarter card">
      <div class="card-content">
        <h2 class="title has-text-centered">Log In</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <p class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: :email %>
            </p>
          </div>
          <div class="field">
            <p class="control">
            <%= f.password_field :password, autocomplete: "new-password", class: "input", placeholder: :password %>
            </p>
          </div>
          <div class="field actions">
            <p class="control">
            <%= f.submit "Continue", class: "button is-success is-fullwidth" %>
            </p>
          </div>
          <div class="columns">
            <div class="column">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </div>
            <div class="column">
              <%- if devise_mapping.recoverable? %>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "is-pulled-right" %><br />
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>