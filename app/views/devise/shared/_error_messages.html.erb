<% if resource.errors.any? %>
  <div class="field container">
    <article class="message is-danger">
      <div class="message-body">
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </article>
  </div>
<% end %>