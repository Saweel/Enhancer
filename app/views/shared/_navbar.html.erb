<nav class="navbar is-light" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <%= link_to root_path, class: "navbar-item" do %>
      <%= content_tag :strong, "Enhancer", :class => "is-size-5" %>
    <% end %>
    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <div class="navbar-item">
        <div class="field has-addons">
          <div class="control has-icons-left">
            <input class="input" type="text" placeholder="Find Services">
            <span class="icon is-small is-left"><i class="fas fa-search"></i></span>
          </div>
          <div class="control">
            <a class="button is-primary is-outlined">Search</a>
          </div>
        </div>
      </div>
    </div>

    <div class="navbar-end">
      <a class="navbar-item">Browse Services</a>
      <% if(!user_signed_in?) %>
      <%= link_to "Log In", new_user_session_path, class: "navbar-item" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "navbar-item" %>
      <% end %>
      <div class="navbar-item">
        <div class="buttons">
          <a class="button is-primary"><strong>Post a Service</strong></a>
        </div>
      </div>
      <% if(user_signed_in?) %>
        <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link"><%= current_user.email %></a>
        <div class="navbar-dropdown">
          <%= link_to "Profile", edit_user_registration_path, class: "navbar-item" %>
          <a class="navbar-item">Dashboard</a>
          <hr class="navbar-divider">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-item" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</nav>

<script>
$(document).ready(function() {
  // Check for click events on the navbar burger icon
  $(".navbar-burger").click(function() {
      // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
      $(".navbar-burger").toggleClass("is-active");
      $(".navbar-menu").toggleClass("is-active");
  });
});
</script>